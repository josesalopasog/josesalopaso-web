---
import background from "../assets/background.svg";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://fonts.googleapis.com/css2?family=Alata&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    <slot />
  </body>
</html>

<style is:global>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  :root {
    --gradient-color: linear-gradient(
      to left,
      rgb(0, 225, 255),
      rgb(210, 0, 255)
    );
    color-scheme: dark light;
  }

  html {
    background-color: black;
    font-size: 24px;
    font-family: system-ui, sans-serif;
  }

  body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 0;
    width: 100%;
    height: 100%;
  }
  /*---Secciones---*/
  @property --angle{
	syntax: "<angle>";
	initial-value: 0deg;
	inherits: false;
  }

  section {
	display: flex;
	flex-direction: column;
	width: 50%;
	margin: 0 auto;
  }

  .section-container {
	margin: 0 auto;
    background-color: rgb(3, 3, 3);
    font-family: "Open Sans";
    text-align: center;
    width: 100%;
	height: 100%;
    border-radius: 30px;
	position: relative;
	padding: 1em;
  }

  .section-container::after, .section-container::before{
	background-image: conic-gradient(from var(--angle),#E100FF,#00E1FF,#E100FF);
	content: '';
	position: absolute;
	height: calc(100% + 0.3 * 1em); 
	width: calc(100% + 0.3 * 1em);  
	top: 50%;
	left: 50%;
	translate: -50% -50%;
	z-index: -1;
	border-radius: 32px;
	animation: 3s spin linear infinite;
	padding: 40px;
  }
  .section-container::before{
	filter: blur(0.5rem);
	opacity: 0.5;
  }

  @keyframes spin {
	from {
		--angle: 0deg;
	}
	to {
		--angle: 360deg;
	}
  }

  h2 {
    font-family: "Cal Sans SemiBold";
    text-align: center;
    font-size: 36px;;
  }

  section h2{
	cursor: pointer;
	transition: 0.8s;
	margin: 15px
  }

  section h2:hover {
    color: transparent;
    background: var(--gradient-color);
    background-clip: text;
    -webkit-background-clip: text;
  }
</style>
